<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secondba"
    tools:context=".secondActivity">

    <TextView
        android:id="@+id/nameShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="name"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/emailShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameShow"
        android:layout_centerHorizontal="true"
        android:text="no email adress"
        android:textSize="15dp" />

    <Button
        android:id="@+id/DementiaBtn"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_below="@+id/emailShow"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/button_background_color"
        android:text="Patient"
        android:textSize="45dp"
        android:textColor="@color/button_text_color" />

    <Button
        android:id="@+id/careTakerBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/DementiaBtn"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/button_text_color"
        android:text="Care Taker" />

    <Switch
        android:id="@+id/CareTakerBtnLocker"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/DementiaBtn"
        android:checked="false"
        android:text="tap here to unlock"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/signOutBtn"
        android:text="Sign out"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/button_background_color"
        android:textColor="@color/button_text_color"/>


</RelativeLayout>